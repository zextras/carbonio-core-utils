/opt/zextras/log/nginx.log /opt/zextras/log/nginx.access.log {
    daily
    sharedscripts
    missingok
    notifempty
    create 0644 zextras zextras
    dateext
    postrotate
      kill -USR1 `cat /opt/zextras/log/nginx.pid 2> /dev/null` 2> /dev/null || true
    endscript
    rotate 7
    compress
    delaycompress
    #su zextras zextras
}

