# SPDX-License-Identifier: GPL-2.0-only

BASE=/opt/zextras
SCRIPTS="antispam-mysql.server zmamavisdctl"

source /opt/zextras/.bashrc

ENABLED=1
/opt/zextras/bin/zmprov -l gs $(/opt/zextras/bin/zmhostname) zimbraServiceEnabled | grep -qw antispam
if [ $? = 1 ]; then
  ENABLED=0
fi

case "$1" in
start)
  if [ $ENABLED = 1 ]; then
    for i in $SCRIPTS; do
      /opt/zextras/bin/$i start $2
    done
  fi
  ;;
stop)
  if [ $ENABLED = 1 ]; then
    for i in $SCRIPTS; do
      /opt/zextras/bin/$i stop
    done
  fi
  ;;
reload | restart)
  if [ $ENABLED = 1 ]; then
    for i in $SCRIPTS; do
      /opt/zextras/bin/$i $1
    done
  fi
  ;;
status)
  STATUS=0
  if [ $ENABLED = 1 ]; then
    for i in $SCRIPTS; do
      /opt/zextras/bin/$i status >/dev/null 2>&1
      R=$?
      if [ $R -ne "0" ]; then
        echo "$i is not running"
        STATUS=$R
      fi
    done
  fi
  exit $STATUS
  ;;
*)
  echo "$0 start|stop|restart|reload|status"
  exit 1
  ;;
esac
